<div class="row">
	<div class="col-md-9">
		<h1>Listing <%=Constants::SCHOOL_NAME_REPLACEMENT%></h1>
	</div>
	<div class="col-md-3 pull-right">
		<%= link_to "#{fa_icon("plus")} New #{Constants::SCHOOL_NAME_REPLACEMENT}".html_safe, new_school_path, :class=>"btn btn-primary" %>
	</div>
</div>
<table class="table table-hover">
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @schools.each do |school| %>
  <tr>
    <td><%= school.name %></td>
    <td><%= link_to 'Show', school %></td>
    <td><%=link_to '', edit_school_path(school), :class=>"glyphicon glyphicon-pencil" %></td>
	<td><%= link_to '', school, :class=>"glyphicon glyphicon-trash", method: :delete, data: { confirm: "Are you sure?"} %></td>
  </tr>
<% end %>
</table>