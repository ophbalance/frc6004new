<div class="row">
	<div class="col-md-9">
		<h1>Listing Messages</h1>
	</div>
	<div class="col-md-3 pull-right">
		<%= link_to "#{fa_icon("plus")} New Message".html_safe, new_message_path, :class=>"btn btn-primary" %>
	</div>
</div>
<table class="table table-hover">
  <thead>
    <tr>
      <th>User</th>
      <th>Message</th>
      <th>Color</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= link_to message.user.full_name, message.user %></td>
        <td><%= message.message %></td>
        <td><%= message.color %></td>
        <td><%= link_to 'Show', message %></td>
        <td><%= link_to '', edit_message_path(message)  , :class=>"glyphicon glyphicon-pencil" %></td>
        <td><%= link_to '', message, :class=>"glyphicon glyphicon-trash", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>